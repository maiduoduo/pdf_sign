<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_rv_fu_li"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/shape_kuang_gray"
    android:orientation="vertical"
    android:padding="3dp">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/img_error"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_test1" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="2"
        android:text="七星瓢虫七星瓢虫"
        android:textColor="@color/color_gray"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_jie_shao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_weight="1"
        android:text="腐食性，为害发霉下脚粮腐食性，为害发霉下脚粮；"
        android:textColor="@color/color_gray"
        android:textSize="15sp" />

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0.1dp"-->
    <!--android:background="@color/color_fen_ge" />-->
</LinearLayout>
