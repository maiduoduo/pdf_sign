<?xml version="1.0" encoding="UTF-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 填充的颜色 -->
    <!--<solid android:color="#00b4fe" />-->
    <solid android:color="#ff1e90ff" />
    <!-- 设置按钮的四个角为弧形 -->
    <!-- android:radius 弧形的半径 -->
    <corners android:radius="3dip" />
    <stroke
        android:width="0.5dp"
        android:color="#fffA8F">
    </stroke>
    <!-- padding：Button里面的文字与Button边界的间隔 -->
    <padding
        android:bottom="2dp"
        android:left="1dp"
        android:right="1dp"
        android:top="2dp" />
</shape>


